<section>
<div class="form-container hidden">
    <h3>Create a New Post:</h3>
    <form class="form post-form">
      <div class="form-group">
        <label for="blog_title">Title:</label>
        <input
          class="form-input"
          type="text"
          id="title"
          name="blog_title"
        />
      </div>

      <div class="form-group">
        <label for="blog_post">Content:</label>
        <textarea
          rows="4"
          class="form-input"
          id="content"
          name="blog_post"
        ></textarea>
      </div>

      <div class="form-group">
        <button type="submit" class="btn btn-primary" id="newPost">Submit</button>

</section>


{{!-- Profile Dashboard that only shows your own posts --}}
{{#if post.length}}
<section>
    <ol>
    {{#each post as |post|}}

    <li>
        <div class="card">
            <div class="card-body">
                <h1><a href="/post/{{post.id}}">{{post.title}}</a></h1>
                <p>{{post.content}}</p>
            </div>
        </div>
    </li>

    {{/each}}
    </ol>
</section>
{{/if}}
<script src="./js/profile.js"></script>